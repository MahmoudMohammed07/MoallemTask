<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/subject_card"
        android:layout_width="77dp"
        android:layout_height="77dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="25dp"
        app:cardCornerRadius="16dp">

        <ImageView
            android:id="@+id/subject_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            tools:src="@drawable/ic_physics" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/subject_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/subject_card"
        android:layout_alignStart="@id/subject_card"
        android:layout_alignEnd="@id/subject_card"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:textColor="@color/customGreen"
        android:textSize="14sp"
        tools:text="Physics" />

</RelativeLayout>